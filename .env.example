# ── Telegram ──────────────────────────────────────────────
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# ── Access control ────────────────────────────────────────
BOT_ACCESS_PASSWORD=changeme
MAX_USERS=20

# ── Yandex Cloud ──────────────────────────────────────────
YC_FOLDER_ID=b1g0000000000000000
# В Docker-контейнере ключ монтируется в /app/sa-key.json (см. docker-compose.yml)
YC_SERVICE_ACCOUNT_KEY_FILE=/app/sa-key.json

# ── Yandex Object Storage (S3) ────────────────────────────
YC_S3_BUCKET=transcribe-bot-audio
YC_S3_ACCESS_KEY=YCAJExxxxxxxxxxxxxxxxx
YC_S3_SECRET_KEY=YCPxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
YC_S3_ENDPOINT=https://storage.yandexcloud.net

# ── Yandex SpeechKit ──────────────────────────────────────
SPEECHKIT_API_ENDPOINT=https://transcribe.api.cloud.yandex.net

# ── YandexGPT ─────────────────────────────────────────────
YANDEXGPT_API_ENDPOINT=https://llm.api.cloud.yandex.net
# Leave empty to auto-build from YC_FOLDER_ID:
YANDEXGPT_MODEL_URI=

# ── PostgreSQL (используется и ботом, и docker-compose) ───
POSTGRES_USER=transcribe
POSTGRES_PASSWORD=transcribe
POSTGRES_DB=transcribe_bot
# DATABASE_URL строится автоматически в docker-compose.yml — не нужно менять:
DATABASE_URL=postgresql+asyncpg://transcribe:transcribe@db:5432/transcribe_bot

